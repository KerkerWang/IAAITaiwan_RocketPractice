@model IAAITaiwanPractice240823.Models.ViewModel.MembershipLoginVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Membership", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <span class="alertred">@Html.Raw(@ViewBag.ErrorAlert)</span>
    <h3 class="title-normal">請輸入您的帳號及密碼</h3>
    <div class="form-group">
        <label class="col-sm-2 control-label">帳　號：</label>
        <div class="col-sm-8">
            @Html.EditorFor(model => model.Account, new { htmlAttributes = new { @class = "form-control", placeholder = "請輸入帳號" } })
            @*<input class="form-control" >*@
        </div>
        <div class="col-sm-2">
            @if (!string.IsNullOrEmpty(ViewData.ModelState["Account"]?.Errors.FirstOrDefault()?.ErrorMessage))
            {
                <span class="alertred"><i class="fa fa-exclamation-circle"></i> 帳號必填</span>
            }
            @*<span class="alertred"><i class="fa fa-exclamation-circle"></i> 帳號必填</span>*@
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">密　碼：</label>
        <div class="col-sm-8">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "請輸入密碼" } })
            @*<input class="form-control" placeholder="請輸入密碼">*@
        </div>
        <div class="col-sm-2">
            @if (!string.IsNullOrEmpty(ViewData.ModelState["Password"]?.Errors.FirstOrDefault()?.ErrorMessage))
            {
                <span class="alertred"><i class="fa fa-exclamation-circle"></i> 密碼必填</span>
            }
            @*<span class="alertred"><i class="fa fa-exclamation-circle"></i> 密碼必填</span>*@
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button class="btn btn-primary solid blank" type="submit">登 入</button>
        </div>
    </div>

    <hr>

    <div class="text-left">
        <a href="@Url.Action("Register","Membership")">尚未註冊</a>
        @*&nbsp;&nbsp;/&nbsp;&nbsp; <a href="member_reg.html">尚未註冊</a>*@
    </div>

}