@model IAAITaiwanPractice240823.Models.News

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="post-content">

    <div class="post-body">
        <div class="entry-header">
            <span class="post-meta-date"><i class="fa fa fa-clock-o"></i> @Model.PublishDate</span>
            <h2 class="entry-title">
                @Model.Title
            </h2>
        </div><!-- header end -->

        <div class="post-media post-image">
            <img src="images/news-img.jpg" class="img-responsive" alt="">
        </div>

        <div class="entry-content topmargin-min">
            @Html.Raw(Model.Content)
        </div>

        <div class="tags-area clearfix">
            <div class="post-footer  pull-left">
                @Html.ActionLink("返回列表", "Index", new { }, new { @class = "btn btn-primary" })
                @*<a href="news.html" class="btn btn-primary">返回列表</a>*@
            </div>

            @*<div class="share-items pull-right">
                    <ul class="post-social-icons unstyled">
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    </ul>
                </div>*@
        </div>
    </div><!-- post-body end -->
</div><!-- post content end -->